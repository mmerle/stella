---
import Layout from "@layouts/default.astro";
---

<Layout title="Stella" description="A star is born">
  <div class="wrapper">
    <h1>Stella</h1>
  </div>
</Layout>

<style>
  h1 {
    font-size: max(2.5vw, 2.5rem);
    font-weight: 700;
    line-height: 1.125;
  }

  p {
    font-size: max(0.8vw, 1.125rem);
    font-weight: 500;
    letter-spacing: -0.125px;

    a {
      text-decoration: none;
      text-underline-offset: 0.25rem;
      color: inherit;
      transition: all 0.2s ease-in-out;

      &:hover {
        text-decoration: underline;
        opacity: 0.8;
      }
    }
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100%;
    padding: max(6vw, 1rem);
  }
</style>
